#fuses HS, NOWDT, BROWNOUT, NOLVP
#use delay (clock = 4000000)
#use rs232(baud=9600, xmit=PIN_C6, rcv=PIN_C7)
#include <stdlib.h>
#include <input.c>

#byte port_a= 5 
#byte port_b= 6 
#byte port_c= 7 
#byte port_d= 8

int count = 0;
int i = 0;

void main()
{
   set_tris_c(0x00);
   port_c=(0x00);
   
   while(true){
      if(input(pin_a2)==0)
      {
         while(input(pin_a2)==0);
         contador++;
         printf(" %d ", contador);
      }
      if(contador == 1){
         printf("Secuencia 1 ");
         secuencia_1();
      }
      else if(contador == 2){
         printf("Secuencia 2 ");
         secuencia_2();
      }
      else if(contador == 3){
         printf("Secuencia 3 ");
         secuencia_3();
      }
      else if(contador == 4){
         printf("Secuencia 4 ");
         secuencia_4();
      }
      else if(contador == 5){
         contador= 1;
      }    
   }


}
