#include <16F877A.h>
#fuses HS, NOWDT, BROWNOUT, NOLVP
#use delay (clock = 4000000)
#byte port_c = 7
int i = 0;

while (true)
{
   for(i=0; i<2;i++)
         {
            output_high(0x00);
            delay_ms(1000);
            output_high(0xff);
            delay_ms(1000);
         }    
}
