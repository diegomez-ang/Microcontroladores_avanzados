#include <16F877A.h>
#fuses HS, NOWDT, BROWNOUT, NOLVP
#use delay (clock = 4000000)

/*#byte trisa = 0x85
#byte porta = 0x05
#byte trisb = 0x86
#byte portb = 0x06*/

#use rs232(baud=9600, xmit=PIN_C6, rcv=PIN_C7)
#include <stdlib.h>
#include <input.c>

#byte port_a= 5 
#byte port_b= 6 
#byte port_c= 7 
#byte port_d= 8


int contador = 0;

void main()
{

   bit_clear (port_b,0);
   bit_clear (port_b,0);
   
   set_tris_b(0x00);
   port_b=0x00;
   ///----- Pregunta por el pin
   while(true){
      if(input(pin_a1)==0)
      {
         while(input(pin_a1)==0);
         contador++;
         printf(" %d ", contador);
      }
      if(contador == 1){
         printf("Secuencia 1 ");
      }
      else if(contador == 2){
         printf("Secuencia 2 ");
      }
      else if(contador == 3){
         printf("Secuencia 1 ");
      }
      else if(contador == 4){
         printf("Secuencia 1 ");
      }
      else if(contador == 5){
         contador == 1;
      }
      
      
     
   }
}



