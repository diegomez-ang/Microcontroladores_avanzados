void main()
{
   bit_clear (trisb,0);
   bit_clear (portb,0);
   bit_clear (trisa,1);
   bit_clear (porta,1);
   trisa = 0xFF;
   
   while(true)
   {   
   //-----secuencia-----
   
    if(input(pin_a0)==0){
   //enclavamiento poner un contador
   contador++;
   printf(" %d", contador );
 }
 
   
   
   
      for(i=0; i<5; i++)
      {      
         for(i=0; i<4; i++)
         {
         secuencia_1();
         }
         for(i=0; i<4; i++)
         {
         secuencia_2();
         }
         for(i=0; i<4; i++)
         {
         secuencia_3();
         }
         for(i=0; i<4; i++)
         {
         secuencia_4();
         }
    bit_clear (portb,0);
    delay_ms(5000);    
   }

}
}


